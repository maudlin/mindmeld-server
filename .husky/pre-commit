set -e

# Run staged file linters/formatters first for quick feedback
printf "\n[husky] Running lint-staged...\n"
npx --no -- lint-staged

# Quick lint check (but don't run tests)
printf "\n[husky] Lint check...\n"
npm run lint

printf "\n[husky] Format check...\n"
npm run format:check

# Skip tests in pre-commit for speed - they run in CI
printf "\n[husky] âœ… Pre-commit checks complete (tests run in CI)\n"
