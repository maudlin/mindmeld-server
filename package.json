{
  "name": "mindmeld-server",
  "version": "0.1.0",
  "description": "Production-ready server for MindMeld mind mapping application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "validate": "npm run lint && npm run format:check && npm run test",
    "postinstall": "husky install",
    "openapi:lint": "spectral lint design/to-be/openapi.yaml",
    "smoke": "node scripts/smoke.js",
    "seed": "node scripts/seed.js",
    "mcp:test": "node test-mcp.js",
    "db:backup": "node scripts/admin/db-backup.js",
    "db:restore": "node scripts/admin/db-restore.js",
    "server:health:deep": "node scripts/admin/server-health.js",
    "debug:config": "node scripts/admin/debug-config.js",
    "debug:routes": "node scripts/admin/debug-routes.js",
    "debug:endpoints": "node scripts/admin/debug-endpoints.js",
    "debug:mcp": "node scripts/admin/debug-mcp.js",
    "debug:system": "node scripts/admin/debug-system.js",
    "data:export": "node scripts/admin/data-export.js",
    "data:import": "node scripts/admin/data-import.js",
    "data:migrate": "node scripts/admin/data-migrate.js",
    "data:backup": "node scripts/admin/data-backup.js",
    "test:admin": "jest tests/admin --testTimeout=30000",
    "test:admin:watch": "jest tests/admin --watch --testTimeout=30000",
    "health:check": "bash scripts/health-check-server.sh",
    "health:pre-commit": "bash scripts/pre-commit-health.sh",
    "cleanup:backups": "node -e \"require('./tests/utils/temp-files').cleanupOldTestBackups()\""
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "pino": "^9.10.0",
    "pino-http": "^10.1.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "y-indexeddb": "^9.0.12",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@playwright/test": "^1.55.0",
    "@stoplight/spectral-cli": "^6.11.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "husky": "^9.1.6",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "local-ssl-proxy": "^2.0.5",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "mindmeld",
    "mind-mapping",
    "express",
    "rest-api",
    "state-management"
  ],
  "author": "MindMeld Team",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.js": [
      "eslint --fix"
    ],
    "tests/**/*.js": [
      "eslint --fix"
    ]
  }
}
